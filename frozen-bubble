$playermalus = 0;
$mptrainingdiff = 30;
$chainreaction = 0;
$mynick = $ENV{USER};
$HISCORES = [];
$HISCORES_MPTRAIN = [];

$rcfile = "$ENV{HOME}/.fbrc";
my $keys_orig = $KEYS;
eval(cat_($rcfile));
$KEYS->{misc}{$_} ||= $keys_orig->{misc}{$_} foreach keys %{$keys_orig->{misc}};  #- for upgrades
