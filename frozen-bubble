	  misc => { fs => SDLK_f, chat => SDLK_RETURN, send_malus_to_rp1 => SDLK_1, send_malus_to_rp2 => SDLK_2, send_malus_to_rp3 => SDLK_3,
                    send_malus_to_rp4 => SDLK_4, send_malus_to_all => SDLK_0, next_playlist_elem => SDLK_TAB } };

$sdl_flags = SDL_ANYFORMAT | SDL_HWSURFACE | SDL_DOUBLEBUF | SDL_HWACCEL | SDL_ASYNCBLIT;
$mixer = 0;
$graphics_level = 3;
@PLAYERS = qw(p1 p2);
